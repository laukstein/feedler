# Auto detect text files and perform LF normalization
* text=auto

# Enforce Unix newlines
.*      text eol=lf
.editorconfig  text eol=lf
.gitattributes text eol=lf
.gitignore     text eol=lf
.htaccess  text eol=lf
*.cnf   text eol=lf
*.conf  text eol=lf
*.css   text eol=lf
*.html  text eol=lf
*.ini   text eol=lf
*.js    text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.php   text eol=lf
*.svg   text eol=lf
*.txt   text eol=lf
*.vcf   text eol=lf
*.webapp      text eol=lf
*.webmanifest text eol=lf
*.xml   text eol=lf
*.xsl   text eol=lf
LICENSE text eol=lf

# Denote all files that are truly binary and should not be modified
*.eot binary
*.gif binary
*.ico binary
*.jpg binary
*.mp4 binary
*.pdf binary
*.png binary
*.ttf binary
*.webp  binary
*.woff  binary
*.woff2 binary